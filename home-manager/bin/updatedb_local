#!/usr/bin/env bash

IGNORE_PATHS=$(echo "$(find "$HOME" -maxdepth 1 -type d -name '.*' | grep -v dotfiles)"$'\n'"$HOME/onedrive"$'\n'"$HOME/go"$'\n'"$HOME/snap" | LC_ALL=C sort -t/ -k999,999)
CACHE_DIR=${XDG_CACHE_HOME:-$HOME/.cache}

updatedb -l 0 -e "$IGNORE_PATHS" -o "$CACHE_DIR"/mlocate.db -U "$HOME"
